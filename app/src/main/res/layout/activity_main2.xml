<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/imgSafe"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/safe"
        android:layout_marginTop="20dp"
        android:padding="23dp"></ImageView>

    <EditText
        android:id="@+id/etMobileNumber"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imgSafe"
        android:inputType="phone"
        android:maxLength="10"
        android:maxLines="1"
        android:hint="enter you mobile no."/>
    <EditText
        android:id="@+id/etTextPassword"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@id/etMobileNumber"
        android:inputType="textPassword"
        android:hint="enter password"
        android:layout_centerHorizontal="true"
        android:paddingTop="1dp"></EditText>
    <Button
        android:id="@+id/btnButton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/etTextPassword"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF0000"
        android:text="Log in"/>
    <TextView
        android:id="@+id/textForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnButton"
        android:text="Forgot password"
        android:layout_marginLeft="130dp"/>

    <TextView
        android:id="@+id/textRegisterYourself"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Women Concerner"
        android:textSize="20dp"></TextView>


</RelativeLayout>